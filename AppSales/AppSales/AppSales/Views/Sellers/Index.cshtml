@{
    /*
     * criar uma model para pegar o objento enviado
     * com a interface IEnumerable que é um tipo bem generico q aceita list hash sort
     */
    ; 
}
@model IEnumerable<AppSales.Models.Seller>

@{
    ViewData["Title"] = "Sellers";
}
<h2>@ViewData["Title"]</h2>

<p>
    <a asp-action="Create" class="btn btn-success">Create New</a>
</p>
<table class="table table-striped table-hover">
    <thead>
        <tr class="table-success">
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BirthDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BaseSalary)
            </th>
            <th>
                Actions
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach( var dados in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelDados => dados.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelDados => dados.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelDados => dados.BirthDate)
                </td>
                <td>
                    @Html.DisplayFor(modelDados => dados.BaseSalary)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@dados.Id">Edit</a>
                    <a asp-action="Details" asp-route-id="@dados.Id">Details</a>
                    <a asp-action="Delete" asp-route-id="@dados.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>